@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

Person(user, "User")

Container(userSystem, "User system", "Software system", "Manages users accounts")
Container(postSystem, "Post system", "Software system", "Manages posts, and discovery")
Container(reactionSystem, "Reaction system", "Software system", "Manages comments, and rating")
Container(feedSystem, "Feed system", "Software system", "Generates personalized posts for users based on their subscriptions")
Container(followingSystem, "Following system", "Software system", "Manages followers")

Rel(user, userSystem, "CRUD for users accounts")
Rel(user, postSystem, "CRUD for posts, and GET locations(discovery)")
Rel(user, reactionSystem, "CRUD for comments and ratings")
Rel(user, feedSystem, "GET personalized feed")
Rel(user, followingSystem, "CRUD for followers")
@enduml